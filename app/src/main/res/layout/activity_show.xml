<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/Edt_Show_V"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:textSize="20sp"
        android:background="#FFF"
        android:layout_alignBaseline="@+id/tex_V"
        android:layout_alignBottom="@+id/tex_V"
        android:layout_toRightOf="@+id/tex_V"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:inputType="text" />
    <TextView
        android:id="@+id/tex_I"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="电流"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/tex_V"
        android:layout_alignLeft="@+id/tex_V"
        android:layout_alignStart="@+id/tex_V" />
    <TextView
        android:id="@+id/tex_P"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="功率"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/tex_I"
        android:layout_alignLeft="@+id/tex_I"
        android:layout_alignStart="@+id/tex_I" />
    <EditText
        android:id="@+id/Edt_Show_P"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:textSize="20sp"
        android:background="#FFF"
        android:inputType="text"
        android:layout_alignBaseline="@+id/tex_P"
        android:layout_alignBottom="@+id/tex_P"
        android:layout_alignLeft="@+id/Edt_Show_A"
        android:layout_alignStart="@+id/Edt_Show_A" />
    <Button
        android:id="@+id/btn_Show_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关闭"
        android:layout_alignBaseline="@+id/btn_Show_start"
        android:layout_alignBottom="@+id/btn_Show_start"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="74dp"
        android:layout_marginEnd="74dp" />
    <Button
        android:id="@+id/btn_Show_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始"
        android:layout_marginTop="79dp"
        android:layout_below="@+id/tex_P"
        android:layout_alignLeft="@+id/tex_P"
        android:layout_alignStart="@+id/tex_P"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp" />

    <EditText
        android:id="@+id/Edt_Show_A"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:textSize="20sp"
        android:background="#FFF"
        android:inputType="text"
        android:layout_alignBaseline="@+id/tex_I"
        android:layout_alignBottom="@+id/tex_I"
        android:layout_alignLeft="@+id/Edt_Show_V"
        android:layout_alignStart="@+id/Edt_Show_V" />

    <TextView
        android:id="@+id/tex_V"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="电压"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginLeft="59dp"
        android:layout_marginStart="59dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
